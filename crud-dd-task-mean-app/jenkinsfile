pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'docker-hub-id'
        DOCKER_HUB_USER = 'gowdas1997'
        SSH_CREDENTIALS_ID = 'remote-vm-ssh-id'

        BACKEND_IMAGE = "${DOCKER_HUB_USER}/mean-backend"
        FRONTEND_IMAGE = "${DOCKER_HUB_USER}/mean-frontend"
    }

    stages {

        stage('1. Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/gowdas1997/crud-dd-task-mean-app.git',
                    credentialsId: 'remote-vm-ssh-id'
            }
        }

        stage('2. Build Backend Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: env.DOCKER_CREDENTIALS_ID, url: '') {
                        sh """
                        docker build -t ${BACKEND_IMAGE}:${BUILD_NUMBER} \
                        -f crud-dd-task-mean-app/backend/Dockerfile crud-dd-task-mean-app/backend
                        """
                        sh "docker tag ${BACKEND_IMAGE}:${BUILD_NUMBER} ${BACKEND_IMAGE}:latest"
                    }
                }
            }
        }

        stage('3. Build Frontend Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: env.DOCKER_CREDENTIALS_ID, url: '') {
                        sh """
                        docker build -t ${FRONTEND_IMAGE}:${BUILD_NUMBER} \
                        -f crud-dd-task-mean-app/frontend/Dockerfile crud-dd-task-mean-app/frontend
                        """
                        sh "docker tag ${FRONTEND_IMAGE}:${BUILD_NUMBER} ${FRONTEND_IMAGE}:latest"
                    }
                }
            }
        }

        stage('4. Push to Docker Hub') {
            steps {
                script {
                    withDockerRegistry(credentialsId: env.DOCKER_CREDENTIALS_ID, url: '') {
                        sh "docker push ${BACKEND_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${BACKEND_IMAGE}:latest"

                        sh "docker push ${FRONTEND_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${FRONTEND_IMAGE}:latest"
                    }
                }
            }
        }

        stage('5. Deploy to VM') {
            steps {
                script {
                    withCredentials([sshUserPrivateKey(
                        credentialsId: env.SSH_CREDENTIALS_ID,
                        keyFileVariable: 'SSH_KEY'
                    )]) {

                        sh """
ssh -o StrictHostKeyChecking=no -i $SSH_KEY ubuntu@43.204.26.87 << 'EOF'
echo "Switching to project directory"
cd /home/ubuntu/crud-dd-task-mean-app/crud-dd-task-mean-app

echo " Pulling latest images from Docker Hub"
sudo docker pull ${BACKEND_IMAGE}:latest
sudo docker pull ${FRONTEND_IMAGE}:latest

echo " Stopping old containers"
sudo docker-compose down --remove-orphans || true

echo " Starting new containers"
sudo docker-compose up -d --force-recreate

echo " Restarting Nginx"
sudo systemctl restart nginx

EOF
                        """
                    }
                }
            }
        }
    }
}

